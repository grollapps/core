<resources>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="infoHeader" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/header_tile</item>
        <item name="android:padding">5dp</item>
        <item name="android:shadowColor">#00111111</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="infoBody" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/info_tile</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="linkStyle" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/info_tile</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:textColor">#ff0008a8</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="valStyle" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/rounded_corner_tile</item>
        <item name="android:padding">5dp</item>
        <item name="android:shadowColor">#AA111111</item>
        <item name="android:shadowDx">5.0</item>
        <item name="android:shadowDy">5.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textColor">@color/doge_text</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="changeUpStyle" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/rounded_corner_tile</item>
        <item name="android:padding">5dp</item>
        <item name="android:shadowColor">#AA111111</item>
        <item name="android:shadowDx">5.0</item>
        <item name="android:shadowDy">5.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textColor">@color/change_up</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="changeDownStyle" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/rounded_corner_tile</item>
        <item name="android:padding">5dp</item>
        <item name="android:shadowColor">#AA111111</item>
        <item name="android:shadowDx">5.0</item>
        <item name="android:shadowDy">5.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textColor">@color/change_down</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="titleStyle" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/title_tile</item>
        <item name="android:padding">10dp</item>
        <item name="android:shadowColor">#AA111111</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="updatingStyle" parent="@android:style/TextAppearance">
        <item name="android:background">#00000000</item>
        <item name="android:padding">3dp</item>
        <item name="android:shadowColor">#00000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
